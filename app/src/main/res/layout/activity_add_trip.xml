<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddTripActivity"
    android:padding="20dp">

    <EditText
        android:id="@+id/etAddTripName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:ems="10"
        android:hint="@string/strAddTripEnter"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <EditText
            android:id="@+id/etAddTripCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/strAddTripCity"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnAddTripSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/strAddTripSearch" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAddTripCities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btnAddTripAddTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/strAddTripAdd" />
</LinearLayout>